<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_pink"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Dinámico (Login/Registro o Bienvenida) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/pastel_lavender">

            <!-- Layout para usuario NO logueado -->
            <LinearLayout
                android:id="@+id/layoutNotLoggedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="🎀 INICIAR SESIÓN"
                    android:textColor="#CD8DD5"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@color/pastel_mauve"
                    android:layout_marginHorizontal="8dp" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="👑 REGISTRARSE"
                    android:textColor="#920C8F"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Layout para usuario LOGUEADO -->
            <LinearLayout
                android:id="@+id/layoutLoggedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvWelcomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👋 ¡Hola, Usuario!"
                    android:textColor="@color/pastel_mauve"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnLogoutMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="🚪 Cerrar Sesión"
                    android:textColor="@color/pastel_rose"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Logo y Título -->

        <!-- Nuestros Servicios DESTACADOS (AHORA PRIMERO) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- ✅ LOGO MÁS GRANDE -->

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="198dp"
                android:contentDescription="💄 Logo Belleza Express"
                android:src="@drawable/logo_belleza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="💄 MAGIC MAKEUP ✨"
                android:textColor="#A0397F"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="🌟 Resalta Tu Belleza 💖"
                android:textColor="#B956CA"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/pastel_lavender_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="💅 SERVICIOS DESTACADOS 🌟"
                android:textColor="#7E165D"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Servicio 1: Facial -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/tratamiento_facial"
                            android:scaleType="centerCrop"
                            android:contentDescription="🧖‍♀️ Tratamiento Facial"
                            android:layout_marginBottom="12dp"
                            android:background="@color/pastel_lavender"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🧖‍♀️ Facial"
                            android:textColor="@color/pastel_rose"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💰 $120.000"
                            android:textColor="@color/eyeshadow_purple"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Servicio 2: Masaje -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/pastel_lavender"
                            android:contentDescription="💆 Masaje Relajante"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tratamiento_masaje" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💆 Masaje"
                            android:textColor="@color/pastel_rose"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💰 $150.000"
                            android:textColor="@color/eyeshadow_purple"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Servicio 3: Depilación -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/tratamiento_depilacion"
                            android:scaleType="centerCrop"
                            android:contentDescription="✨ Depilación"
                            android:layout_marginBottom="12dp"
                            android:background="@color/pastel_lavender"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✨ Depilación"
                            android:textColor="@color/pastel_rose"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💰 $80.000"
                            android:textColor="@color/eyeshadow_purple"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Slider de Tratamientos (AHORA EN LA MITAD) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✨ DESCUBRE MÁS TRATAMIENTOS ✨"
                android:textColor="#DD7CED"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerSlider"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Nuestro Equipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="👩‍💼 NUESTRAS ESPECIALISTAS 🌸"
                android:textColor="@color/pastel_mauve"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Especialista 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/pastel_lavender_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/especialista1"
                            android:scaleType="centerCrop"
                            android:contentDescription="🎨 Especialista en Maquillaje"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎨 Maquilladora Profesional"
                            android:textColor="@color/pastel_mauve"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👤 Ana Rodríguez"
                            android:textColor="#8943C3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Especialista 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/pastel_lavender_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/especialista2"
                            android:scaleType="centerCrop"
                            android:contentDescription="🌟 Especialista en Skincare"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌟 Especialista en Skincare"
                            android:textColor="@color/pastel_mauve"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👤 María González"
                            android:textColor="#AE3BB4"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Especialista 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/pastel_lavender_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/especialista3"
                            android:scaleType="centerCrop"
                            android:contentDescription="✨ Especialista en Depilación"
                            android:layout_marginBottom="8dp"
                            android:background="@color/white"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✨ Especialista en Depilación"
                            android:textColor="@color/pastel_mauve"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👤 Laura Martínez"
                            android:textColor="#C759A5"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Navegación Inferior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pastel_lavender"
            android:elevation="8dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnNavServices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💅 Servicios"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/eyeshadow_purple"
                android:drawablePadding="4dp"
                android:drawableTint="@color/pastel_mauve" />

            <Button
                android:id="@+id/btnNavBookings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📞 CONTÁCTENOS"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/eyeshadow_purple"
                android:drawablePadding="4dp"
                android:drawableTint="@color/pastel_mauve" />

            <Button
                android:id="@+id/btnNavProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👤 Perfil"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/eyeshadow_purple"
                android:drawablePadding="4dp"
                android:drawableTint="@color/pastel_mauve" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>