<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/pastel_pink"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Centrado -->

        <!-- Información de Contacto Centrada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- ✅ LOGO MÁS GRANDE -->
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Logo Makeup Magic"
                android:src="@drawable/logo_belleza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:text="Contáctanos"
                android:textColor="#E694A7"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:text="💖 Tu belleza es nuestra prioridad"
                android:textColor="#9855A4"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✨ Estamos aquí para realzar tu belleza"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#BF6DA5"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="12dp"
                    android:background="@color/pastel_lavender_light"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="@color/pastel_rose"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📞 Llámanos"
                            android:textSize="14sp"
                            android:textColor="#DE88BC"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+57 300 123 4567"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- WhatsApp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="12dp"
                    android:background="@color/pastel_lavender_light"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:tint="@color/whatsapp_green"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💬 Escríbenos por WhatsApp"
                            android:textSize="14sp"
                            android:textColor="#DB9FE6"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+57 300 123 4567"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="12dp"
                    android:background="@color/pastel_lavender_light"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:tint="@color/pastel_rose"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📧 Envíanos un correo"
                            android:textSize="14sp"
                            android:textColor="#975594"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hola@makeupmagic.com"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Dirección -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@color/pastel_lavender_light"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:tint="@color/pastel_rose"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📍 Visítanos"
                            android:textSize="14sp"
                            android:textColor="#C367D3"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Centro Comercial Bella Vista\nLocal 205, Piso 2"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Horario de Atención -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🕒 Horario de Atención"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#CC78B4"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunes a Viernes: 8:00 AM - 7:00 PM"
                        android:textSize="16sp"
                        android:textColor="#873674"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@color/pastel_lavender_light"
                        android:paddingHorizontal="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sábados: 9:00 AM - 4:00 PM"
                        android:textSize="16sp"
                        android:textColor="#CC52B8"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/pastel_lavender_light"
                        android:paddingHorizontal="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💅 ¡Reserva tu cita con anticipación!"
                    android:textSize="14sp"
                    android:textColor="#BA546D"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <!-- Botón Llamar -->
            <Button
                android:id="@+id/btnCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📞 Llamar Ahora"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="18dp"
                android:backgroundTint="#732639"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp" />

            <!-- Botón WhatsApp -->
            <Button
                android:id="@+id/btnWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💬 Contactar por WhatsApp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="18dp"
                android:backgroundTint="@color/whatsapp_green"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp" />

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnBackContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="← Volver al Inicio"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="@color/pastel_lavender"
                android:textColor="#A24FAF"
                android:drawablePadding="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>